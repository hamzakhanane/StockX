<!DOCTYPE html>
<html>
  <head>
    <title>TradeX</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.iexAPIKeyPublishable = "<%= Rails.application.credentials.iex[:publishable_key_id] %>"
      window.iexAPIKeySecret = "<%= Rails.application.credentials.iex[:secret_access_key] %>"
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
